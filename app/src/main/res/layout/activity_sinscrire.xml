<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.pixcyan.android.raffennn.Sinscrire">

    <TextView
        android:text="Remplir les champs ci-dessous : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="20dp"/>

    <TextView
            android:text="Login :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLogin"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/login"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:layout_marginTop="103dp"
            android:layout_below="@+id/text1"
            android:layout_toRightOf="@+id/textLogin"
            android:layout_toEndOf="@+id/textLogin"
            android:width="150dp"/>

    <TextView
            android:text="Mot de passe :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMDP"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/mdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mdp"
            android:width="150dp"
            android:layout_below="@+id/login"
            android:layout_toRightOf="@+id/textMDP"
            android:layout_toEndOf="@+id/textMDP"
            android:layout_marginTop="28dp"/>


</RelativeLayout>
