<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.pixcyan.android.raffennn.ExercicesMaths">

    <TextView
        android:text="Choisis un exercice :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textSize="20dp" />

    <Button
        android:text="Additions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/additions"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:onClick="additions"/>

    <Button
        android:text="Multiplications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiplications"
        android:layout_below="@+id/additions"
        android:layout_centerHorizontal="true"
        android:onClick="multiplications"/>

    <Button
        android:text="AlÃ©atoire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aleatoire"
        android:layout_below="@+id/multiplications"
        android:layout_centerHorizontal="true"
        android:onClick="aleatoire"/>

    <Button
            android:text="Quitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="quitter"
            android:id="@+id/boutonQuitter"
            android:layout_alignTop="@+id/butouMenu"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <Button
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="retourMenu"
            android:id="@+id/butouMenu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
