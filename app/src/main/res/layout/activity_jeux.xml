<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.pixcyan.android.raffennn.Jeux"
        >

    <TextView android:text="Quelle activitÃ© voulez-vous lancer ?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titre"
        android:textSize="20dp"
              android:textColor="#ff000000"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maths"
        android:onClick="exoMaths"
        android:padding="10dp"
        android:background="@drawable/maths"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="exoCulture"
        android:padding="10dp"
        android:id="@+id/button"
        android:background="@drawable/livre"
        android:clickable="true"
        android:layout_alignTop="@+id/maths"
        android:layout_alignRight="@+id/boutonQuitter"
        android:layout_alignEnd="@+id/boutonQuitter"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"/>

    <Button
            android:text="Quitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="quitter"
            android:id="@+id/boutonQuitter"
            android:background="#de5b77b2"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/titre"
            android:layout_alignEnd="@+id/titre"/>


</RelativeLayout>
